getgenv().autoPlant = false;
getgenv().autoSell = false;
getgenv().buyEgg = false;


local library = loadstring(game:HttpGet(('https://raw.githubusercontent.com/AikaV3rm/UiLib/master/Lib.lua')))()

local w = library:CreateWindow("Harvest Simulator") -- Creates the window

local b = w:CreateFolder("Autofarm") -- Creates the folder(U will put here your buttons,etc)

local c = w:CreateFolder("Mix")

local d = w:CreateFolder("Credits")

b:Toggle("Auto Plant",function(bool)
    getgenv().autoPlant = bool
    if bool then
      doPlant()
    end
end)

b:Toggle("Auto Sell",function(bool)
    getgenv().autoSell = bool
    if bool then
      doSell()
    end
end)

d:Button("Water#1001",function()
    setclipboard("Water#1001")
end)



c:DestroyGui()


function doPlant()
    spawn(function()
        while getgenv().autoPlant == true do
            if not getgenv().autoPlant then break end;
            getgenv().autoPlant = true;
                local Event = game:GetService("Players").Razerisgood123098.PlayerGui.UI["Render_Plot"].RemoteEvent
                Event:FireServer()
              wait()
              end
        end)
    end


function doSell()
    spawn(function()
        while getgenv().autoSell == true do
            if not getgenv().autoSell then break end;
            getgenv().autoPlant = true;
firetouchinterest(game.Players.LocalPlayer.Character.HumanoidRootPart, game:GetService("Workspace").Map.Sell, 0)
firetouchinterest(game.Players.LocalPlayer.Character.HumanoidRootPart, game:GetService("Workspace").Map.Sell, 1)
              wait(math.huge)
              end
        end)
    end
